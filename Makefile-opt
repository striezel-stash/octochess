CXXFLAGS = -O3 -g -pipe -march=corei7 -std=gnu++0x -Wall -flto -fwhole-program -pthread -ldl
#CXXFLAGS = -O0 -g -pipe -std=gnu++0x

all: chess-use bookgen-use

chess-gen: *.cpp *.hpp
	g++ $(CXXFLAGS) -fprofile-generate -o $@ book.cpp chess.cpp config.cpp detect_check.cpp calc.cpp fen.cpp logger.cpp mobility.cpp moves.cpp moves_captures.cpp moves_checks.cpp pawn_structure_hash_table.cpp pvlist.cpp util.cpp see.cpp selftest.cpp statistics.cpp unix.cpp eval.cpp hash.cpp tweak.cpp zobrist.cpp sqlite/sqlite3.o
	./chess-gen --moves 1 --depth 11 --threads 1 auto
	rm -f *.o

chess-use: chess-gen
	g++ $(CXXFLAGS) -fprofile-use -fprofile-correction -o $@ book.cpp chess.cpp config.cpp detect_check.cpp calc.cpp fen.cpp logger.cpp mobility.cpp moves.cpp moves_captures.cpp moves_checks.cpp pawn_structure_hash_table.cpp pvlist.cpp util.cpp see.cpp selftest.cpp statistics.cpp unix.cpp eval.cpp hash.cpp tweak.cpp zobrist.cpp sqlite/sqlite3.o

bookgen-use: chess-gen
	g++ $(CXXFLAGS) -fprofile-use -fprofile-correction -o $@ book.cpp bookgen.cpp config.cpp detect_check.cpp calc.cpp fen.cpp logger.cpp mobility.cpp moves.cpp moves_captures.cpp moves_checks.cpp pawn_structure_hash_table.cpp pvlist.cpp util.cpp see.cpp selftest.cpp statistics.cpp unix.cpp eval.cpp hash.cpp tweak.cpp zobrist.cpp sqlite/sqlite3.o

clean:
	rm -f chess
	rm -f *.o
